<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MOJI GRILL & SUKI</title>

  <!-- Bootstrap 5 CSS API -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Bootstrap 5 JS API -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<body>
  <main>
    <div class="container" style="display: flex;">
      <div class="card mb-3">
        <div class="card-header" style="display: flex; justify-content: space-between;">
          <h4>
            Nomor Invoice:
          </h4>
          <span class="text-success"><%= dataReservasi[0].id_invoice; %></span>
        </div>
      </div>

      <div class="card me-3 w-100">
        <div class="card-header" style="text-align: center">
          Informasi Reservasi
        </div>

        <table class="table" style="text-align: center">
          <thead>
            <tr>
              <th scope="col">ID Reservasi</th>
              <th scope="col">Nama Pelanggan</th>
              <th scope="col">Email</th>
              <th scope="col">Nomor Meja</th>
              <th scope="col">Tanggal Reservasi</th>
              <th scope="col">Metode Pembayaran</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td><%= dataReservasi[0].id; %></td>
              <td><%= dataReservasi[0].nama_pelanggan; %></td>
              <td><%= dataReservasi[0].email; %></td>
              <td><%= dataReservasi[0].nomor_meja; %></td>
              <td><%= dataReservasi[0].untuk_tanggal; %></td>
              <td>Transfer Bank</td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div style="display: flex; flex-direction: column; width: 100%;">
        <div class="card mb-3 w-100">
          <div class="card-header" style="text-align: center">
            List Pesanan
          </div>
        
          <table class="table" style="text-align: center">
            <thead>
              <tr>
                <th scope="col">ID Pesanan</th>
                <th scope="col">Nama Menu</th>
                <th scope="col">Quantity</th>
                <th scope="col">Harga</th>
              </tr>
            </thead>
            
            <tbody id="view-pesanan">
              <!-- # List Pesanan Pelanggan -->
              <% dataPesanan.forEach(dp => { %>
                <tr>
                  <td>
                    <%= dp.id %>
                  </td>
    
                  <td>
                    <%= dp.nama_menu%>
                  </td>
    
                  <td>
                    <%= dp.qty %>
                  </td>
    
                  <td>
                    Rp.<%= dp.total_harga %>
                  </td>
                </tr>
              <% }); %> 
            </tbody>
          </table>
        
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <h5 style="text-align: right;">
                Total: Rp.<%= totalBayar %>
              </h5>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</body>

</html>